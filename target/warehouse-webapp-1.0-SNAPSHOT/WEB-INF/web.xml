<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>Warehouse Web Application</display-name>

    <servlet>
        <servlet-name>AddClientServlet</servlet-name>
        <servlet-class>servlets.AddClientServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddClientServlet</servlet-name>
        <url-pattern>/addClient</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddProductServlet</servlet-name>
        <servlet-class>servlets.AddProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddProductServlet</servlet-name>
        <url-pattern>/addProduct</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SellProductServlet</servlet-name>
        <servlet-class>servlets.SellProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SellProductServlet</servlet-name>
        <url-pattern>/sellProduct</url-pattern>
    </servlet-mapping>
</web-app>
